<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.eng_mohamed.movieslist.Movie_DetailFragment"
    tools:showIn="@layout/activity_movie_detail">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/titleColor"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textStyle="bold|italic"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:weightSum="1"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="wrap_content"
                android:id="@+id/detail_poster"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".65"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/releasedate"
                        style="@style/Titles"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_releaseDate"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold|italic"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate"
                        style="@style/Titles"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_rate"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-light"

                        android:textStyle="bold|italic"
                        />
                </LinearLayout>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    app:borderWidth="0dp"
                    />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/over"
            style="@style/Titles"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_overview"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trial"
            style="@style/Titles"
            android:paddingBottom="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:id="@+id/videosLinear"
            android:orientation="vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rev"
            style="@style/Titles"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:id="@+id/reviewsLinear"
            android:orientation="vertical"
            />
    </LinearLayout>

</ScrollView>




</FrameLayout>
